<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginRight="8dp"
             android:layout_marginLeft="8dp"
             android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/recipe_image_IV"
        android:contentDescription="@string/recipe_overview_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/recipe_name_cover"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/bordered_rectangle_transparent"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/recipe_name_TV"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textSize="24sp"
        android:background="@drawable/bordered_rectangle"
        android:textColor="@android:color/white"
        android:gravity="center"/>

</FrameLayout>